# OpenHeart Cyprus - Environment Variables
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE
# =============================================================================
DB_PASSWORD=your_secure_postgres_password_here

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# SECURITY (CRITICAL - Generate strong keys for production)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_jwt_secret_key_at_least_32_characters_long

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
PII_ENCRYPTION_KEY=your_fernet_encryption_key_here

# =============================================================================
# ORTHANC (DICOM Server)
# =============================================================================
ORTHANC_PASSWORD=your_orthanc_admin_password

# =============================================================================
# MINIO (S3-compatible storage for attachments)
# =============================================================================
MINIO_ROOT_USER=openheart_minio_admin
MINIO_ROOT_PASSWORD=your_minio_password_here

# =============================================================================
# GESY INTEGRATION (Optional - requires HIO enrollment)
# =============================================================================
# GESY_API_URL=https://api.gesy.org.cy
# GESY_API_KEY=your_gesy_api_key
# GESY_PROVIDER_ID=your_provider_id

# =============================================================================
# OPENAI (Optional - for semantic search embeddings)
# =============================================================================
# OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
